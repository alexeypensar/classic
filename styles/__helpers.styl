// класс .visually-hidden для стилизации чекбоксов и радио-кнопок

.visually-hidden:not(:focus):not(:active), input[type="checkbox"].visually-hidden, input[type="radio"].visually-hidden {
	position: absolute;
	width: 1px;
	height: 1px;
	margin: -1px;
	padding: 0;
	border: 0;
	white-space: nowrap;
	clip: rect(0 0 0 0);
	clip-path: inset(100%);
	overflow: hidden;
}


.main-link {
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
	color: $color-blue;
	position: relative;
	display: inline-block;
	text-decoration: none;
	&::after {
		content: '';
		position: absolute;
		bottom: -3px;
		left: 0;
		width: 100%;
		height: 1px;
		background-color: $color-blue;
	}
}

.main-button {
	color: #FFFFFF;
	background-color: $color-blue;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: 500;
	font-size: 18px;
	border: 1px solid $color-blue;
	outline: none;
	text-decoration: none

	&_transparent {
		background-color: #fff;
		border: 1px solid $color-blue;
		color: $color-black;
	}

	&:hover {
		cursor: pointer;
	}
}


.embla {
	overflow: hidden;
}
.embla__container {
	display: flex;
}
.embla__slide {
	position: relative;
	min-width: 100%;
}