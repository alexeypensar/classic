// класс .visually-hidden для стилизации чекбоксов и радио-кнопок

.visually-hidden:not(:focus):not(:active), input[type="checkbox"].visually-hidden, input[type="radio"].visually-hidden {
	position: absolute;
	width: 1px;
	height: 1px;
	margin: -1px;
	padding: 0;
	border: 0;
	white-space: nowrap;
	clip: rect(0 0 0 0);
	clip-path: inset(100%);
	overflow: hidden;
}

button {
	padding: 0;
}

button:hover {
	cursor: pointer;

}


.main-link {
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
	color: $color-blue;
	position: relative;
	display: inline-block;
	text-decoration: none;
	padding-bottom: 5px;
	&::after {
		content: '';
		position: absolute;
		bottom: 0;
		left: 0;
		width: 100%;
		height: 1px;
		background-color: $color-blue;
	}
}

.main-button {
	color: #FFFFFF;
	background-color: $color-blue;
	display: flex;
	justify-content: center;
	align-items: center;
	font-weight: 500;
	font-size: 18px;
	border: 1px solid $color-blue;
	outline: none;
	text-decoration: none



	&:hover, &:focus {
		cursor: pointer;
		background-color: #FFFFFF;
		color: $color-blue;
		transition: all 0.4s ease;
	}
	&_transparent {
		background-color: #fff;
		border: 1px solid $color-blue;
		color: $color-black;

		&:hover, &:focus {
			color: #FFFFFF;
			background-color: $color-blue;
			transition: all 0.4s ease;
		}
	}
}


.embla {
	overflow: hidden;
}
.embla__container {
	display: flex;
}
.embla__slide {
	position: relative;
	min-width: 100%;
}

.embla__button {
	width: 40px;
	height: 40px;
	border: 1px solid #CBCBCB;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #FFFFFF;

}

.embla__button--prev {
	margin-right: 28px;
}


.swiper-button-prev1, .swiper-button-next1 {
	width: 40px;
	height: 40px;
	border: 1px solid #CBCBCB;
	border-radius: 50%;
	display: flex;
	justify-content: center;
	align-items: center;
	background-color: #FFFFFF;

	& img {
		transform: scale(1);
		transition: ransform 0.4s ease;
	}
	&:hover {
		cursor: pointer;
	}

	&:hover, &:focus, &:active {
		outline: none;
		& img {
			transform: scale(1.2);
			transition: ransform 0.4s ease;
		}
	}

}

