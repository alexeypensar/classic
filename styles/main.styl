@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
	scroll-behavior: smooth;
}


html, body {

	font-family: 'Raleway', sans-serif;
	font-weight: 400;
	font-size: 16px;
	color: $color-black;
	line-height: 1.5;

}
	
body {
	background-color: #fff;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header__nav {
	padding-top: 15px;
	padding-bottom: 15px;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.header__logo {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 180px;
	margin-right: auto;
}

h1 {
	font-weight: 400;
	font-size: 12px;
	line-height: 130%;
	display: inline-block;
	width: 95%;
	margin-top: 3px;
}

.header__ul {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}


.header__link_round {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 40px;
	height: 40px;
	border: 1px solid #CBCBCB;
	border-radius: 50%;
	margin-right: 10px;

}

.header__link_phone {
	font-weight: 600;
	font-size: 24px;
	line-height: 28px;
	margin-right: 55px;
	color: $color-black;
	text-decoration: none;
	font-feature-settings: 'pnum' on, 'lnum' on;
}

.header .main-button {
	margin-right: 65px;
	height: 50px;
	width: 170px;
	font-weight: 400;
	font-size: 14px;
}

.header__link_bold {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	color: $color-black;
	text-decoration: none;
	display: flex;
	flex-direction: row;
	align-items: center;

	& img {
		margin-right: 10px;
	}
}

.header__li_last {
	margin-left: 40px;
}

.menu {
	width: 100%;
	padding-top: 25px;
	padding-bottom: 25px;
	background-color: $color-green;

}

.menu__links {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;

}



.menu__link {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	text-decoration: none;
	color: #FFFFFF;
}

.menu__link_arrow {
	position: relative;
	padding-right: 20px;
	&::after {
		content: url('../img/icons/arrow-down-white.svg');
		position: absolute;
		right: 0;
		top: 0;
	}
}

.banners__wrapper {
	position: relative;
	background-color: #fff;
	padding-left: 0;
	padding-right: 0;
	margin-bottom: 70px;

	&::before {
		content: '';
		position: absolute;
		background-color: transparent;
		border-left: 10px solid $color-green;
		border-bottom: 10px solid $color-green;
		bottom: -3px;
		left: -70px;
		width: 458px;
		height: 490px;
		z-index:2;
		//overflow: visible;
		//pointer-events: none;
	}

	&::after {
		content: '';
		position: absolute;
		background-color: transparent;
		border-right: 10px solid $color-green;
		border-bottom: 10px solid $color-green;
		bottom: -3px;
		right: -10px;
		width: 310px;
		height: 490px;
		//overflow: visible;
		//pointer-events: none;
		//z-index: -1;
	}
}

.banners {
	width: 100%;


}

.banner {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	width: 100%;
	min-width: 100%;




}

.banner__text {
	padding: 100px 100px 120px 0;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 50%;

	& h2 {
		font-weight: 600;
		font-size: 18px;
		margin-bottom: 4px;
	}

	& h3 {
		font-weight: 600;
		font-size: 42px;
		line-height: 130%;
		color: $color-red;
		margin-bottom: 20px;
	}

	& p {
		font-size: 20px;
		line-height: 150%;
		font-feature-settings: 'pnum' on, 'lnum' on;
		margin-bottom: 40px;
	}

	& b {
		font-weight: 600;
	}
}

.banner__links {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;

	& .main-button {
		margin-right: 30px;
		height: 70px;
		width: 290px;

	}

	& .main-link {
		white-space: nowrap;
	}

}

.banner__image {
	z-index: 1;
	max-width: 649px;
	//max-width: 649px;
}

.banners__buttons {
	position: absolute;
	bottom: -3px;
	left: 417px;
	display: flex;
	flex-direction: row;
	align-items: flex-end;

	& button {
		& img {
			transform: scale(1);
			transition: ransform 0.4s ease;
		}
		&:hover {
			cursor: pointer;
		}

		&:hover, &:focus, &:active {
			outline: none;
			& img {
				transform: scale(1.2);
				transition: ransform 0.4s ease;
			}
		}
	}
}

.types__wrapper {
	padding-top: 70px;
	padding-bottom: 70px;
	position: relative;
	//height: 500px;
	width: 100%;
	&::before {
		content: '';
		position: absolute;
		height: 100px;
		width: calc((100vw - 1000px)/2);
		left: 0;
		top: 55%;
		background-color: $color-green;
		z-index: -1;
	}
	&::after {
		content: '';
		position: absolute;
		height: 100px;
		width: calc((100vw - 1000px)/2);
		right: 0;
		top: 55%;
		background-color: $color-green;
		z-index: -1;
	}
}

.types__headings {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 40px;
}

.section__heading {
	font-weight: 600;
	font-size: 42px;
	line-height: 49px;

}

.types__buttons {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	margin-bottom: 40px;
}

.types__button + .types__button {
	margin-left: 50px;
}

.types__button {
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
	position: relative;
	display: inline-block;
	text-decoration: none;
	border: none;
	background-color: transparent;
	outline: none;



	&_active {
		color: $color-blue;
		&::after {
			content: '';
			position: absolute;
			bottom: -5px;
			left: 0;
			width: 100%;
			height: 1px;
			background-color: $color-blue;
		}
	}



}

.types__items {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.types__item {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;

	& h3 {
		font-weight: 600;
		font-size: 18px;
		line-height: 21px;
		margin-top: 17px;
		margin-bottom: 5px;
	}

	& p {
		font-size: 16px;
		line-height: 19px;
		/* identical to box height */

		font-feature-settings: 'pnum' on, 'lnum' on;
		color: $color-green;
	}
}

