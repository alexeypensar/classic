@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
	scroll-behavior: smooth;
}


html, body {

	font-family: 'Raleway', sans-serif;
	font-weight: 400;
	font-size: 16px;
	color: $color-black;
	line-height: 1.5;

}
	
body {
	background-color: #fff;
}

.container {
	max-width: 1230px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header__nav {
	padding-top: 15px;
	padding-bottom: 15px;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.header__logo {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 180px;
	margin-right: auto;
}

h1 {
	font-weight: 400;
	font-size: 12px;
	line-height: 130%;
	display: inline-block;
	width: 95%;
	margin-top: 3px;
}

.header__ul {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}


.header__link_round {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 40px;
	height: 40px;
	border: 1px solid #CBCBCB;
	border-radius: 50%;
	margin-right: 10px;

}

.header__link_phone {
	font-weight: 600;
	font-size: 24px;
	line-height: 28px;
	margin-right: 55px;
	color: $color-black;
	text-decoration: none;
	font-feature-settings: 'pnum' on, 'lnum' on;
}

.header .main-button {
	margin-right: 65px;
	height: 50px;
	width: 170px;
	font-weight: 400;
	font-size: 14px;
}

.header__link_bold {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	color: $color-black;
	text-decoration: none;
	display: flex;
	flex-direction: row;
	align-items: center;

	& img {
		margin-right: 10px;
	}
}

.header__li_last {
	margin-left: 40px;
}

.menu {
	width: 100%;
	padding-top: 25px;
	padding-bottom: 25px;
	background-color: $color-green;

}

.menu__links {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;

}



.menu__link {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	text-decoration: none;
	color: #FFFFFF;
}

.menu__link_arrow {
	position: relative;
	padding-right: 20px;
	&::after {
		content: url('../img/icons/arrow-down-white.svg');
		position: absolute;
		right: 0;
		top: 0;
	}
}

