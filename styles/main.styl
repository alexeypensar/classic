@import 'reset.css';
@import '__fonts.styl';
@import '__variables.styl';
@import '__helpers.styl';
@import '__animations.styl';
@import '__adaptive.styl';

html {
	scroll-behavior: smooth;
}


html, body {

	font-family: 'Raleway', sans-serif;
	font-weight: 400;
	font-size: 16px;
	color: $color-black;
	line-height: 1.5;

}
	
body {
	background-color: #fff;
}

.container {
	max-width: 1200px;
	margin: 0 auto;
	width: 100%;
	padding-left: 15px;
	padding-right: 15px;
}

.header__nav {
	padding-top: 15px;
	padding-bottom: 15px;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
}

.header__logo {
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 180px;
	margin-right: auto;
}

h1 {
	font-weight: 400;
	font-size: 12px;
	line-height: 130%;
	display: inline-block;
	width: 95%;
	margin-top: 3px;
}

.header__ul {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}


.header__link_round {
	display: flex;
	justify-content: center;
	align-items: center;
	width: 40px;
	height: 40px;
	border: 1px solid #CBCBCB;
	border-radius: 50%;
	margin-right: 10px;

}

.header__link_phone {
	font-weight: 600;
	font-size: 24px;
	line-height: 28px;
	margin-right: 55px;
	color: $color-black;
	text-decoration: none;
	font-feature-settings: 'pnum' on, 'lnum' on;
}

.header .main-button {
	margin-right: 65px;
	height: 50px;
	width: 170px;
	font-weight: 400;
	font-size: 14px;
}

.header__link_bold {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	color: $color-black;
	text-decoration: none;
	display: flex;
	flex-direction: row;
	align-items: center;

	& img {
		margin-right: 10px;
	}
}

.header__li_last {
	margin-left: 40px;
}

.menu {
	width: 100%;
	padding-top: 25px;
	padding-bottom: 25px;
	background-color: $color-green;

}

.menu__links {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;

}



.menu__link {
	font-weight: 600;
	font-size: 18px;
	line-height: 21px;
	text-decoration: none;
	color: #FFFFFF;
}

.menu__link_arrow {
	position: relative;
	padding-right: 20px;
	&::after {
		content: url('../img/icons/arrow-down-white.svg');
		position: absolute;
		right: 0;
		top: 0;
	}
}

.banners__wrapper {
	position: relative;
	background-color: #fff;
	padding-left: 0;
	padding-right: 0;
	margin-bottom: 70px;

	&::before {
		content: '';
		position: absolute;
		background-color: transparent;
		border-left: 10px solid $color-green;
		border-bottom: 10px solid $color-green;
		bottom: -3px;
		left: -70px;
		width: 458px;
		height: 490px;
		z-index:2;
		//overflow: visible;
		//pointer-events: none;
	}

	&::after {
		content: '';
		position: absolute;
		background-color: transparent;
		border-right: 10px solid $color-green;
		border-bottom: 10px solid $color-green;
		bottom: -3px;
		right: -10px;
		width: 310px;
		height: 490px;
		//overflow: visible;
		//pointer-events: none;
		//z-index: -1;
	}
}

.banners {
	width: 100%;


}

.banner {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	width: 100%;
	min-width: 100%;




}

.banner__text {
	padding: 100px 100px 120px 0;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	width: 50%;

	& h2 {
		font-weight: 600;
		font-size: 18px;
		margin-bottom: 4px;
	}

	& h3 {
		font-weight: 600;
		font-size: 42px;
		line-height: 130%;
		color: $color-red;
		margin-bottom: 20px;
	}

	& p {
		font-size: 20px;
		line-height: 150%;
		font-feature-settings: 'pnum' on, 'lnum' on;
		margin-bottom: 40px;
	}

	& b {
		font-weight: 600;
	}
}

.banner__links {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;

	& .main-button {
		margin-right: 30px;
		height: 70px;
		width: 290px;

	}

	& .main-link {
		white-space: nowrap;
	}

}

.banner__image {
	z-index: 1;
	max-width: 649px;
	//max-width: 649px;
}

.banners__buttons {
	position: absolute;
	bottom: -3px;
	left: 417px;
	display: flex;
	flex-direction: row;
	align-items: flex-end;

	& button {
		& img {
			transform: scale(1);
			transition: ransform 0.4s ease;
		}
		&:hover {
			cursor: pointer;
		}

		&:hover, &:focus, &:active {
			outline: none;
			& img {
				transform: scale(1.2);
				transition: ransform 0.4s ease;
			}
		}
	}
}

.types__wrapper {
	padding-top: 70px;
	padding-bottom: 70px;
	position: relative;
	//height: 500px;
	width: 100%;
	&::before {
		content: '';
		position: absolute;
		height: 100px;
		width: calc((100vw - 1000px)/2);
		left: 0;
		top: 55%;
		background-color: $color-green;
		z-index: -1;
	}
	&::after {
		content: '';
		position: absolute;
		height: 100px;
		width: calc((100vw - 1000px)/2);
		right: 0;
		top: 55%;
		background-color: $color-green;
		z-index: -1;
	}
}

.types__headings {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 40px;
}

.section__heading {
	font-weight: 600;
	font-size: 42px;
	line-height: 49px;

	&_green {
		color: $color-green;
	}

}

.types__buttons {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	margin-bottom: 40px;
}

.types__button + .types__button {
	margin-left: 50px;
}

.types__button {
	font-weight: 500;
	font-size: 18px;
	line-height: 21px;
	position: relative;
	display: inline-block;
	text-decoration: none;
	border: none;
	background-color: transparent;
	outline: none;



	&_active {
		color: $color-blue;
		padding-bottom: 5px;
		&::after {
			content: '';
			position: absolute;
			bottom: 0;
			left: 0;
			width: 100%;
			height: 1px;
			background-color: $color-blue;
		}
	}



}

.types__items {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
}

.types__item {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;

	& h3 {
		font-weight: 600;
		font-size: 18px;
		line-height: 21px;
		margin-top: 17px;
		margin-bottom: 5px;
	}

	& p {
		font-size: 16px;
		line-height: 19px;
		/* identical to box height */

		font-feature-settings: 'pnum' on, 'lnum' on;
		color: $color-green;
	}
}

.sales {
	margin-top: 70px;
	margin-bottom: 70px;

	& .main-button {
		width: 260px;
		height: 70px;
	}


}

.sales__header {
	display: flex;
	flex-direction: row;
	justify-content: flex-end;
	margin-bottom: 40px;
}

.sales__item {
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
	border: 10px solid $color-green;
}

.sales__text {
	padding-top: 65px;
	padding-left: 110px;
	padding-bottom: 65px;
	padding-right: 90px;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	& h2 {
		font-weight: 600;
		font-size: 18px;
		margin-bottom: 5px;
	}

	& h3 {
		font-weight: 600;
		font-size: 42px;
		line-height: 130%;
		color: $color-red;
		margin-bottom: 20px;
	}

	& p {
		margin-bottom: 40px;
	}




}


.calculator__wrapper {
	width: 100%;
	background-color: #E8F5F3;
}

.calculator {
	padding-top: 100px;
	padding-bottom: 100px;

	& .section__heading {
		margin-bottom: 35px;
	}
}


.calculator__steps {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: flex-start;
}

.calculator__step {
	border: 10px solid $color-green;
	display: flex;
	flex-direction: column;
	justify-content: space-between;
	align-items: flex-start;
	height: 427px;
	width: 31%;
}

.calculator__heading {
	height: 85px;
	width: 100%;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	background-color: $color-green;
	& span {
		width: 40px;
		height: 40px;
		display: flex;
		justify-content: center;
		align-items: center;
		background-color: #FFFFFF;
		border: 1px solid #CBCBCB;
		color: $color-green;
		border-radius: 50%;
		font-weight: 600;
		font-size: 24px;
		margin-right: 13px;
		margin-left: 30px;
		font-feature-settings: 'pnum' on, 'lnum' on;
	}
	& h3 {
		font-weight: 600;
		font-size: 24px;
		color: #FFFFFF;
	}
}

.calculator__inputs {
	background-color: #ffffff;
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: flex-start;
	padding: 40px 30px;
	height: 100%;

	&_left {
		margin-right: 45px;
	}

	& fieldset {
		display: flex;
		flex-direction: column;
		border-style: none;
		padding: 0;
		margin: 0;



		& legend {
			font-weight: 600;
			font-size: 18px;
			line-height: 1;
			margin-bottom: 20px;
			padding: 0;
		}
		& label {
			font-size: 16px;
			line-height: 19px;
			margin-bottom: 20px;
			&:hover {
				cursor:pointer;
			}
		}

		& input {
			margin-left: 0;
			margin-right: 8px;
			&:hover {
				cursor:pointer;
			}
			//margin-top: 0;
		}
	}
}

.calculator__step_2, .calculator__step_3 {
	& fieldset:first-child {
		margin-bottom: 45px;
	}
}

.calculator__step_2 {
	& fieldset:nth-child(2) {
		margin-top: -8px;
	}
}

.calculator__plus-minus {
	display: flex;
	flex-direction: column;
	justify-content: flex-start;
	align-items: flex-start;
	width: 100%;

	& fieldset:not(:first-child) sup {
		color: $color-green;

	}

}

.calculator__buttons {
	display: flex;
	flex-direction: row;
	justify-content: flex-start;
	align-items: center;
	position: relative;
	//margin-top: 22px;

}

.calculator__minus, .calculator__plus {
	width: 30px;
	height: 30px;
	display: flex;
	justify-content: center;
	align-items: center;
	outline: none;
	border: 1px solid $color-green;
	background-color: transparent;
	font-size: 32px;
	color: $color-gray;
	line-height: 1;
	transition: all 0.4s ease;

	&:hover, &:focus {
		background-color: $color-green;
		color: #FFFFFF;
		transition: all 0.4s ease;
	}

	&:disabled {
		border: 1px solid $color-lightgray;
		color: $color-lightgray;

		&:hover, &:focus {
			cursor: not-allowed;
			background-color: transparent;
			color: $color-lightgray;
		}
	}
}

.calculator__minus {
	margin-right: 66px;
}

.calculator__number {
	font-weight: 600;
	font-size: 18px;
	//margin-left: 36px;
	//margin-right: 36px;
	font-feature-settings: 'pnum' on, 'lnum' on;
	position: absolute;
	left: 56px;
	top: 2px;
}

.calculator__buttons_green {
	font-weight: 500;
	font-size: 16px;
	color: $color-green;
	margin-top: 17px;
}


.calculator__results {
	display: flex;
	flex-direction: row;
	justify-content: space-between;
	align-items: center;
	margin-top: 43px;

	& p {
		width: 38%;
		font-weight: normal;
		font-size: 14px;
		line-height: 130%;

	}

	& .main-button {
		width: 238px;
		height: 70px;
	}
}

.calculator__result {
	margin-left: auto;
	margin-right: 34px;
	font-weight: 600;
	font-size: 24px;
	line-height: 28px;
	font-feature-settings: 'pnum' on, 'lnum' on;
	position: relative;
	&::before {
		position: absolute;
		content: '';
		height: 3px;
		width: 130px;
		background-color: $color-green;
		left: -144px;
		top: 10px;
	}
	&::after {
		position: absolute;
		content: '';
		height: 3px;
		width: 40px;
		background-color: $color-green;
		left: -54px;
		top: 18px;
	}
}

